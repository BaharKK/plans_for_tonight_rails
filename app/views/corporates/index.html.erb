<h1>Corporates#index</h1>
<p>Find me in app/views/corporates/index.html.erb</p>

<%= month_calendar do |date| %>
  <%= date %>
<% end %>


<%= button_to "Add A New Event", new_event_path, method: :get%>
<%#ink_to "New Event", new_event_path%>
<button id="past_events">View Past Events</button>
<div id="show_current">
  <h3> Current Events </h3>

  <% current_user.events.present.each do |event| %>
    <p><%= event.name %> (<%= link_to "edit", edit_category_event_path(event.category_id,event) %>, <%= link_to "delete", category_event_path(event.category_id, event), method: :delete,confirm: "You sure?" %>) | <%= event.location %> </p>
    <%= image_tag event.image_url(:thumb) if event.image? %>
    <p>Event Title: <%= link_to event.name, event_path(event.id) %></p>
    <p>Description: <%= event.description %></p>
    <p><%= formatted_date(event.show_date) %> | <%= event.duration %> mins </p><br>
  <% end %>
</div>

<hr>

<div id="show_past">
  <h3> Past Events </h3>
  <% current_user.events.past.each do |event| %>
    <p><%= event.name %> (<%= link_to "edit", edit_category_event_path(event.category_id,event) %>, <%= link_to "delete", category_event_path(event.category_id, event), method: :delete,confirm: "You sure?" %>) | <%= event.location %> </p>
    <%= image_tag event.image_url(:thumb) if event.image? %>
    <p>Event Title: <%= link_to event.name, event_path(event.id) %></p>
    <p>Description: <%= event.description %></p>
    <h4><%= formatted_date(event.show_date) %> | <%= event.duration %> mins</h4><br>
  <% end %>
</div>

 
<script> 
  $('#past_events').on('click', function() {
    $('#show_past').toggle();

      if ($.trim($(this).text()) === 'View Past Events') {
        $(this).text('Hide Past Events');
    } else {
        $(this).text('View Past Events');        
    }
    
    return false; 
  });

// $(function() {
